@using PokeCardManager.Data


<div class="pokecard-div border-primary border-bottom border-3 border-0" data-card-id="@card.Id">
    <div class="pokecard-img">
        <div class="cardeffect" data-rarity="@card.RarityEffect" data-subtypes="@card.SubtypeEffect?">
            <div class="pokecard__translater">
                <button class="pokecard__rotator" tabindex="0">

                    <div class="pokecard__front">
                        <img src="@card.ImageLarge" loading="lazy" height="200">

                        <div class="pokecard__shine"></div>
                        <div class="pokecard__glare"></div>
                    </div>
                </button>
            </div>
        </div>
    </div>
    <div class="pokecard-info" data-tcg="@card.TcgUrl">
        <ul class="pc-dets">
            <li>
                @card.Safe("Supertype")
            </li>
            <li>
                <h6 class="mb-0">@card.Name</h6>
            </li>
            <li>
                @card.Safe("SetName")
            </li>
            <li>
                @card.Safe("Rarity") - #@card.Number
            </li>
            <li>
                <h4 class="text-danger">
                    @card.Price 
                </h4>
            </li>
        </ul>
        <div class="pokecard-tools">
        </div>
    </div>
</div>

@code 
{
    [Parameter]
    public CardX card { get; set; }

}